# Enable all optional checks
enable=all

# Disable style checks that would require extensive refactoring
# These can be enabled later if desired
disable=SC2292  # Prefer [[ ]] over [ ] for tests
disable=SC2250  # Prefer putting braces around variable references
disable=SC2236  # Use -n instead of ! -z
disable=SC2248  # Prefer double quoting even when variables don't contain special characters
disable=SC2310  # Function invoked in ! or if condition disables set -e
disable=SC2312  # Consider invoking command separately to avoid masking return value
